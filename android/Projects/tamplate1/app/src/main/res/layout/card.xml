<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/banner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:visibility="gone"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:layout_marginTop="@dimen/card_btn_cancel_margin_top"
        android:layout_marginRight="@dimen/card_btn_cancel_margin_right"
        android:layout_width="@dimen/card_btn_cancel_width"
        android:layout_height="@dimen/card_btn_cancel_height"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/banner_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle"
            android:clickable="true"
            android:gravity="center"
            android:text="10"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textStyle="bold"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/button_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:src="@drawable/ic_cancel"
            android:visibility="gone"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
